<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="arpeggiatorum.ArpeggiatorumController"
      prefHeight="Infinity" maxHeight="Infinity" alignment="TOP_LEFT" fillWidth="true">
    <MenuBar>
        <Menu text="Utilities">
            <MenuItem text="Log" fx:id="menuLog" onAction="#buttonLogClick"/>
        </Menu>
    </MenuBar>

    <SplitPane xmlns="http://javafx.com/javafx"
               orientation="VERTICAL" maxHeight="Infinity" maxWidth="Infinity">
        <GridPane
                xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="5" vgap="5"
                maxHeight="Infinity" maxWidth="Infinity">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" fillWidth="true" percentWidth="10"/>
                <ColumnConstraints hgrow="ALWAYS" fillWidth="true" percentWidth="40" minWidth="50"
                                   prefWidth="Infinity"/>
                <ColumnConstraints hgrow="ALWAYS" fillWidth="true" percentWidth="40" minWidth="50"
                                   prefWidth="Infinity"/>
                <ColumnConstraints hgrow="ALWAYS" fillWidth="true" percentWidth="10"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
            </rowConstraints>
            <!--            //First Column-->
            <Text text="MIDI Input Port"
                  GridPane.columnIndex="0" GridPane.rowIndex="0"
                  GridPane.columnSpan="1"/>
            <Text text="MIDI Output Port"
                  GridPane.columnIndex="0" GridPane.rowIndex="1"
                  GridPane.columnSpan="1"/>
            <Text text="Audio Output"
                  GridPane.columnIndex="0" GridPane.rowIndex="2"
                  GridPane.columnSpan="1"/>
            <Text text="Audio Input"
                  GridPane.columnIndex="0" GridPane.rowIndex="3"
                  GridPane.columnSpan="1"/>
            <Text text="Audio Channel"
                  GridPane.columnIndex="0" GridPane.rowIndex="4"
                  GridPane.columnSpan="1"/>
            <Text text="Current Threshold"
                  GridPane.columnIndex="0" GridPane.rowIndex="5"
                  GridPane.columnSpan="1"/>
            <Text text="Current Tempo"
                  GridPane.columnIndex="0" GridPane.rowIndex="6"
                  GridPane.columnSpan="1"/>
            <Text text="Articulation"
                  GridPane.columnIndex="0" GridPane.rowIndex="7"
                  GridPane.columnSpan="1"/>
            <Text text="Pitch Range"
                  GridPane.columnIndex="0" GridPane.rowIndex="8"
                  GridPane.columnSpan="1"/>
            <Text text="Tonal Enrichment"
                  GridPane.columnIndex="0" GridPane.rowIndex="9"
                  GridPane.columnSpan="1"/>
            <Text text="Something"
                  GridPane.columnIndex="0" GridPane.rowIndex="10"
                  GridPane.columnSpan="1"/>
            <Text text="Something"
                  GridPane.columnIndex="0" GridPane.rowIndex="11"
                  GridPane.columnSpan="1"/>


            <!--            //Second Column-->
            <ChoiceBox fx:id="choiceMidiIn" GridPane.columnIndex="1" GridPane.columnSpan="1"
                       GridPane.rowIndex="0" maxHeight="Infinity" maxWidth="Infinity"/>
            <ChoiceBox fx:id="choiceMidiOut" GridPane.columnIndex="1" GridPane.columnSpan="1"
                       GridPane.rowIndex="1" maxHeight="Infinity" maxWidth="Infinity"/>
            <ChoiceBox fx:id="choiceAudioOut" GridPane.columnIndex="1" GridPane.columnSpan="1"
                       GridPane.rowIndex="2" maxHeight="Infinity" maxWidth="Infinity"/>
            <ChoiceBox fx:id="choiceAudioIn" GridPane.columnIndex="1" GridPane.columnSpan="1"
                       GridPane.rowIndex="3" maxHeight="Infinity" maxWidth="Infinity"/>
            <ChoiceBox fx:id="choiceAudioChannel" GridPane.columnIndex="1" GridPane.columnSpan="1"
                       GridPane.rowIndex="4" maxHeight="Infinity" maxWidth="Infinity"/>
            <Slider fx:id="sliderThreshold" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5"
                    maxHeight="Infinity" maxWidth="Infinity"/>
            <Slider fx:id="sliderTempo" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6"
                    maxHeight="Infinity" maxWidth="Infinity"/>
            <Slider fx:id="sliderArticulation" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="7"
                    maxHeight="Infinity" maxWidth="Infinity"/>
            <Slider fx:id="sliderRange" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="8"
                    maxHeight="Infinity" maxWidth="Infinity"/>
            <ChoiceBox fx:id="choiceEnrichment" GridPane.columnIndex="1" GridPane.columnSpan="1" maxHeight="Infinity"
                       maxWidth="Infinity"
                       GridPane.rowIndex="9"/>

            <Slider fx:id="sliderEnrichment" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="11"
                    maxHeight="Infinity" maxWidth="Infinity"/>

            <Button fx:id="buttonPanic" textAlignment="CENTER" text="PANIC!" onAction="#buttonPanicClick"
                    GridPane.columnIndex="1"
                    GridPane.columnSpan="2" GridPane.rowIndex="12"
                    maxHeight="Infinity" maxWidth="Infinity"/>


            <!--            //Third Column-->
            <ChoiceBox fx:id="choiceMidiChannel" GridPane.columnIndex="2" GridPane.columnSpan="1"
                       GridPane.rowIndex="0" maxHeight="Infinity" maxWidth="Infinity"/>
            <ChoiceBox fx:id="choiceArpeggioChannel" GridPane.columnIndex="2" GridPane.columnSpan="1"
                       GridPane.rowIndex="1" maxHeight="Infinity" maxWidth="Infinity"/>
            <ChoiceBox fx:id="choiceHeldChannel" GridPane.columnIndex="2" GridPane.columnSpan="1"
                       GridPane.rowIndex="2" maxHeight="Infinity" maxWidth="Infinity"/>
            <ChoiceBox fx:id="choiceBassChannel" GridPane.columnIndex="2" GridPane.columnSpan="1"
                       GridPane.rowIndex="3" maxHeight="Infinity" maxWidth="Infinity"/>
            <ChoiceBox fx:id="choiceMic2MIDI" GridPane.columnIndex="2" GridPane.columnSpan="1"
                       GridPane.rowIndex="4" maxHeight="Infinity" maxWidth="Infinity"/>
            <ChoiceBox fx:id="choicePattern" GridPane.columnIndex="2" GridPane.columnSpan="1"
                       GridPane.rowIndex="9" maxHeight="Infinity" maxWidth="Infinity"/>


            <!--            //Fourth Column-->
            <Text text="Channel"
                  GridPane.columnIndex="3" GridPane.rowIndex="0"
                  GridPane.columnSpan="1"/>
            <Text text="Arpeggio Channel"
                  GridPane.columnIndex="3" GridPane.rowIndex="1"
                  GridPane.columnSpan="1"/>
            <Text text="Held Notes Channel"
                  GridPane.columnIndex="3" GridPane.rowIndex="2"
                  GridPane.columnSpan="1"/>
            <Text text="Bass Channel"
                  GridPane.columnIndex="3" GridPane.rowIndex="3"
                  GridPane.columnSpan="1"/>
            <Text text="Activate"
                  GridPane.columnIndex="3" GridPane.rowIndex="4"
                  GridPane.columnSpan="1"/>
            <Text text="Auto-Tune"
                  GridPane.columnIndex="3" GridPane.rowIndex="5"
                  GridPane.columnSpan="1"/>
            <Text text="Something"
                  GridPane.columnIndex="3" GridPane.rowIndex="6"
                  GridPane.columnSpan="1"/>
            <Text text="[0-127]"
                  GridPane.columnIndex="3" GridPane.rowIndex="7"
                  GridPane.columnSpan="1"/>
            <Text text="Arpeggiator Pattern"
                  GridPane.columnIndex="3" GridPane.rowIndex="8"
                  GridPane.columnSpan="1"/>
            <Text text="Upload"
                  GridPane.columnIndex="3" GridPane.rowIndex="9"
                  GridPane.columnSpan="1"/>
            <Text text="Something"
                  GridPane.columnIndex="3" GridPane.rowIndex="10"
                  GridPane.columnSpan="1"/>
            <Text text="Something"
                  GridPane.columnIndex="3" GridPane.rowIndex="11"
                  GridPane.columnSpan="1"/>
        </GridPane>
        <VBox prefWidth="Infinity" maxHeight="Infinity" SplitPane.resizableWithParent="true">
            <BorderPane SplitPane.resizableWithParent="true">
                <center>
                    <Text SplitPane.resizableWithParent="true" text="CQT Bins will be here..." textAlignment="CENTER"/>
                </center>
            </BorderPane>
        </VBox>
    </SplitPane>
</VBox>
