                <!--                              GridPane.columnSpan="1" GridPane.halignment="RIGHT"/>-->
                <Text text="CQT Sharpness"
                      fx:id="textSharpness"
                      GridPane.columnIndex="0" GridPane.rowIndex="3"
                      GridPane.columnSpan="1" GridPane.halignment="RIGHT"/>
                <Text text="CQT Scaling Factor"
                      fx:id="textScale"
                      GridPane.columnIndex="0" GridPane.rowIndex="4"
                      GridPane.columnSpan="1" GridPane.halignment="RIGHT"/>


                <!--//Second Column-->
                <ComboBox fx:id="comboAudioIn" GridPane.columnIndex="1" GridPane.columnSpan="1"
                          GridPane.rowIndex="0" maxHeight="Infinity" maxWidth="Infinity"
                          onAction="#comboAudioInChanged"/>
                <ComboBox fx:id="comboMic2MIDI" GridPane.columnIndex="1" GridPane.columnSpan="2"
                          GridPane.rowIndex="1" maxHeight="Infinity" maxWidth="Infinity"
                          onAction="#comboMic2MIDIChanged"/>
                <!--                        <Slider fx:id="sliderThreshold" GridPane.columnIndex="1" GridPane.columnSpan="3"-->
                <!--                                GridPane.rowIndex="2"-->
                <!--                                maxHeight="Infinity" maxWidth="Infinity" SplitPane.resizableWithParent="true"-->
