                    <TextField fx:id="e8" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e9" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e10" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e11" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e12" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e13" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e14" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e15" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e16" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                </HBox>
                <Slider fx:id="sliderEnrichment" GridPane.columnIndex="1" GridPane.columnSpan="2"
                        GridPane.rowIndex="5"
                        maxHeight="Infinity" maxWidth="Infinity"
                        showTickMarks="true"
                        majorTickUnit="10" minorTickCount="1"/>
                <!--                        <Text text="Test"-->
                <!--                              fx:id="textsliderEnrichment"-->
                <!--                              GridPane.columnIndex="0" GridPane.rowIndex="5"-->
                <!--                              GridPane.columnSpan="1" GridPane.halignment="RIGHT"/>-->

                <!--            //Third Column-->
                <ComboBox fx:id="comboPattern" GridPane.columnIndex="2" GridPane.columnSpan="1"
                          GridPane.rowIndex="3" maxHeight="Infinity" maxWidth="Infinity"
                          onAction="#comboPatternChanged"/>


                <!--            //Fourth Column-->

                <Button fx:id="buttonTapTempo" text="Tap Tempo"
                        GridPane.columnIndex="3" GridPane.rowIndex="0"
                        GridPane.columnSpan="1"
                        maxHeight="Infinity" maxWidth="Infinity"
                        textAlignment="CENTER"
                        onAction="#buttonTapTempoClick"/>
                <Text text="(legato)"
                      GridPane.columnIndex="3" GridPane.rowIndex="1"
                      GridPane.columnSpan="1"/>
                <Text text="[0-127]" fx:id="textRange"
                      GridPane.columnIndex="3" GridPane.rowIndex="2"
                      GridPane.columnSpan="1"/>
                <Text text="Arpeggiator Pattern"
                      GridPane.columnIndex="3" GridPane.rowIndex="3"
                      GridPane.columnSpan="1"/>
                <Button fx:id="buttonUpload" text="Upload"
                        GridPane.columnIndex="3" GridPane.rowIndex="4"
                        GridPane.columnSpan="1"
                        maxHeight="Infinity" maxWidth="Infinity"
                        textAlignment="CENTER"
                        onAction="#buttonUploadClick"/>

            </GridPane>
        </Tab>
        <Tab fx:id="tabPerformance" text="Performance" closable="false"></Tab>
    </TabPane>

    <BorderPane fx:id="borderPane" SplitPane.resizableWithParent="true">
        <top>
            <Button fx:id="buttonPanic" textAlignment="CENTER" text="PANIC!" onAction="#buttonPanicClick"
                    maxHeight="Infinity" maxWidth="Infinity" prefHeight="50"/>
        </top>
