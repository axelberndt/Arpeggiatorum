                <ComboBox fx:id="comboMIDIChannel" GridPane.columnIndex="1" GridPane.columnSpan="1"
                          GridPane.rowIndex="1" maxHeight="Infinity" maxWidth="Infinity"
                          onAction="#comboMIDIChannelChanged"/>

                <!--                //Third Column-->
                <ComboBox fx:id="comboMIDIOut" GridPane.columnIndex="2" GridPane.columnSpan="1"
                          GridPane.rowIndex="0" maxHeight="Infinity" maxWidth="Infinity"
                          onAction="#comboMIDIOutChanged"/>
                <ComboBox fx:id="comboArpeggioChannel" GridPane.columnIndex="2" GridPane.columnSpan="1"
                          GridPane.rowIndex="1" maxHeight="Infinity" maxWidth="Infinity"
                          onAction="#comboArpeggioChannelChanged"/>
                <ComboBox fx:id="comboSustainedChannel" GridPane.columnIndex="2" GridPane.columnSpan="1"
                          GridPane.rowIndex="2" maxHeight="Infinity" maxWidth="Infinity"
                          onAction="#comboSustainedChannelChanged"/>
                <ComboBox fx:id="comboBassChannel" GridPane.columnIndex="2" GridPane.columnSpan="1"
                          GridPane.rowIndex="3" maxHeight="Infinity" maxWidth="Infinity"
                          onAction="#comboBassChannelChanged"/>
                <!--                //Fourth Column-->
                <Text text="MIDI Output Port"
                      GridPane.columnIndex="3" GridPane.rowIndex="0"
                      GridPane.columnSpan="1" GridPane.halignment="LEFT"/>
                <Text text="Arpeggio Channel"
                      GridPane.columnIndex="3" GridPane.rowIndex="1"
                      GridPane.columnSpan="1" GridPane.halignment="LEFT"/>
                <Text text="Sustained Channel"
                      GridPane.columnIndex="3" GridPane.rowIndex="2"
                      GridPane.columnSpan="1" GridPane.halignment="LEFT"/>
                <Text text="Bass Channel"
                      GridPane.columnIndex="3" GridPane.rowIndex="3"
                      GridPane.columnSpan="1" GridPane.halignment="LEFT"/>
            </GridPane>
        </Tab>


        <Tab text="Audio Input" closable="false">
