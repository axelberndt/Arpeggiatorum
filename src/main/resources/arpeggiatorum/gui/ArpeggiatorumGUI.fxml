<SplitPane xmlns:fx="http://javafx.com/fxml"
           xmlns="http://javafx.com/javafx" orientation="VERTICAL" maxHeight="Infinity"
           maxWidth="Infinity"
           fx:controller="arpeggiatorum.gui.ArpeggiatorumGUIController"
           dividerPositions="0.7">

    <TabPane xmlns:fx="http://javafx.com/fxml" fx:id="tabPaneControls"
             maxHeight="Infinity" maxWidth="Infinity" tabClosingPolicy="UNAVAILABLE">
        <Tab text="MIDI" closable="false">
            <GridPane
                    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="5" vgap="5"
                    maxHeight="Infinity" maxWidth="Infinity">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="10"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="40" minWidth="40"
                                       prefWidth="Infinity"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="40" minWidth="40"
                                       prefWidth="Infinity"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="10"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                </rowConstraints>

                <!--                //First Column-->
                <Text text="MIDI Input Port"
                      GridPane.columnIndex="0" GridPane.rowIndex="0"
                      GridPane.columnSpan="1" GridPane.halignment="RIGHT"/>
                <Text text="Input Channel"
                      GridPane.columnIndex="0" GridPane.rowIndex="1"
                      GridPane.columnSpan="1"
                      GridPane.halignment="RIGHT"/>

                <!--                //Second Column-->
                <ComboBox fx:id="comboMIDIIn" GridPane.columnIndex="1" GridPane.columnSpan="1"
                          GridPane.rowIndex="0" maxHeight="Infinity" maxWidth="Infinity"
