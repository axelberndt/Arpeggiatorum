                </padding>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="10"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="40" minWidth="40"
                                       prefWidth="Infinity"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="40" minWidth="40"
                                       prefWidth="Infinity"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="10"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                </rowConstraints>
                <!--                //First Column-->
                <Text text="Audio Input"
                      GridPane.columnIndex="0" GridPane.rowIndex="0"
                      GridPane.columnSpan="1" GridPane.halignment="RIGHT"/>
                <Text text="Pitch Extraction Algorithm"
