<!--                        GridPane.fillWidth="true" onAction="#buttonRestartClick"></Button>-->
                <Slider fx:id="sliderSharpness" GridPane.columnIndex="1" GridPane.columnSpan="3"
                        GridPane.rowIndex="3"
                        maxHeight="Infinity" maxWidth="Infinity" SplitPane.resizableWithParent="true"
                        GridPane.fillWidth="true" min="1" max="4" value="2" showTickMarks="true"
                        showTickLabels="true" majorTickUnit="1" minorTickCount="1"/>
                <Slider fx:id="sliderScale" GridPane.columnIndex="1" GridPane.columnSpan="3"
                        GridPane.rowIndex="4"
                        maxHeight="Infinity" maxWidth="Infinity" SplitPane.resizableWithParent="true"
                        GridPane.fillWidth="true" min="0" max="1" value="0" showTickMarks="true"
                        showTickLabels="false" majorTickUnit="0.1" minorTickCount="1"/>
                <ToggleButton fx:id="toggleButtonActivate" text="Activate"
                              GridPane.columnIndex="0" GridPane.rowIndex="5"
                              GridPane.columnSpan="4"
                              maxHeight="Infinity" maxWidth="Infinity"
                              textAlignment="CENTER"
                              onAction="#toggleButtonActivateClick"/>


                <!--                //Third Column-->
                <ComboBox fx:id="comboAudioChannel" GridPane.columnIndex="2" GridPane.columnSpan="1"
                          GridPane.rowIndex="0" maxHeight="Infinity" maxWidth="Infinity"
                          onAction="#comboAudioChannelChanged"/>
                <!--                //Fourth Column-->
                <Text text="Audio Channel"
                      GridPane.columnIndex="3" GridPane.rowIndex="0"
                      GridPane.columnSpan="1" GridPane.halignment="LEFT"/>
                <ToggleButton fx:id="toggleButtonAutoTune" text="Auto-Tune"
                              GridPane.columnIndex="3" GridPane.rowIndex="1"
                              GridPane.columnSpan="1"
                              maxHeight="Infinity" maxWidth="Infinity"
                              textAlignment="CENTER"
                              onAction="#toggleButtonAutoTuneClick"/>

            </GridPane>
        </Tab>

        <Tab text="Arpeggiatorum" closable="false">
            <GridPane
                    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="5" vgap="5"
                    maxHeight="Infinity" maxWidth="Infinity">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="10"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="40" minWidth="40"
                                       prefWidth="Infinity"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="40" minWidth="40"
                                       prefWidth="Infinity"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="10"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="20.0" prefHeight="50.0" vgrow="ALWAYS"/>
                </rowConstraints>

                <!--            //First Column-->
                <Text text="Current Tempo" fx:id="textTempo"
                      GridPane.columnIndex="0" GridPane.rowIndex="0"
                      GridPane.columnSpan="1" GridPane.halignment="RIGHT"/>
                <Text text="Articulation (staccato)"
                      GridPane.columnIndex="0" GridPane.rowIndex="1"
                      GridPane.columnSpan="1" GridPane.halignment="RIGHT"/>
                <Text text="Pitch Range"
                      GridPane.columnIndex="0" GridPane.rowIndex="2"
                      GridPane.columnSpan="1" GridPane.halignment="RIGHT"/>
                <Text text="Tonal Enrichment"
                      GridPane.columnIndex="0" GridPane.rowIndex="3"
                      GridPane.columnSpan="1" GridPane.halignment="RIGHT"/>


                <!--            //Second Column-->
                <Slider fx:id="sliderTempo" GridPane.columnIndex="1" GridPane.columnSpan="2"
                        GridPane.rowIndex="0"
                        maxHeight="Infinity" maxWidth="Infinity"
                        min="100" max="1000" value="550" showTickMarks="true"
                        showTickLabels="true" majorTickUnit="100" minorTickCount="2"/>
                <Slider fx:id="sliderArticulation" GridPane.columnIndex="1" GridPane.columnSpan="2"
                        GridPane.rowIndex="1"
                        maxHeight="Infinity" maxWidth="Infinity"
                        min="50" max="150" value="100" showTickMarks="true"/>
                <RangeSlider fx:id="sliderRange" GridPane.columnIndex="1" GridPane.columnSpan="2"
                             GridPane.rowIndex="2"
                             maxHeight="Infinity" maxWidth="Infinity" min="0" max="127" lowValue="0"
                             highValue="127"
                             showTickLabels="true" showTickMarks="true" majorTickUnit="12" minorTickCount="1"/>
                <ComboBox fx:id="comboEnrichment" GridPane.columnIndex="1" GridPane.columnSpan="1"
                          maxHeight="Infinity"
                          maxWidth="Infinity"
                          GridPane.rowIndex="3" onAction="#comboEnrichmentChanged"/>
                <HBox GridPane.fillWidth="true" GridPane.columnIndex="1" GridPane.columnSpan="2"
                      GridPane.rowIndex="4"
                      maxHeight="Infinity"
                      maxWidth="Infinity">
                    <TextField fx:id="e1" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e2" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e3" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e4" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e5" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
                    <TextField fx:id="e6" text="0" maxWidth="Infinity" maxHeight="Infinity"/>
